#!/usr/bin/env bash
GOVERNOR="performance"

performance () {
sudo sed -i "2s/.*/GOVERNOR="'"performance"'"/" /usr/local/bin/governor
governor -r
}

ondemand () {
sudo sed -i "2s/.*/GOVERNOR="'"ondemand"'"/" /usr/local/bin/governor
governor -r
}

conservative () {
sudo sed -i "2s/.*/GOVERNOR="'"conservative"'"/" /usr/local/bin/governor
governor -r
}

run () {
echo $GOVERNOR | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
}

update () {
sudo rm /usr/local/bin/governor
sudo wget -cq --show-progress https://raw.githubusercontent.com/pyavitz/scripts/master/governor  -P /usr/local/bin/
sudo chmod +x /usr/local/bin/governor
governor -h
}

# Commands
if [ $# -eq 0 ]
then
        echo "Missing options!"
        echo "(run $0 -h for help)"
        echo ""
        exit 0
fi

ECHO="false"

while getopts "copruh" OPTION; do
        case $OPTION in

                c)
                        ECHO="conservative"
                        ;;
                o)
                        ECHO="ondemand"
                        ;;
                p)
                        ECHO="performance"
                        ;;
                r)
                        ECHO="run"
                        ;;
                u)
                        ECHO="update"
                        ;;
                h)
                        echo "CPU frequency scaling"
                        echo "Usage: governor -opt"
                        echo ""
                        echo "   -c       Conservative"
                        echo "   -o       Ondemand"
                        echo "   -p       Performance"
                        echo ""
                        echo "   -r       Run"
                        echo "   -u       Update"
                        echo ""
                        exit 0
                        ;;

        esac
done

if [ $ECHO = "conservative" ]
then
        conservative;
fi
if [ $ECHO = "ondemand" ]
then
        ondemand;
fi
if [ $ECHO = "performance" ]
then
        performance;
fi
if [ $ECHO = "run" ]
then
        run;
fi
if [ $ECHO = "update" ]
then
        update;
fi
