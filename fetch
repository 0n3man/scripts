mkdir -p ~/.build
cd ~/.build
echo -e "\e[1;31mFetching rpi3-stable\e[0m"
wget -cq --show-progress https://github.com/pyavitz/rpi-img-builder/releases/download/linux/rpi3-stable.tar.xz
