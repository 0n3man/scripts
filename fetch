#!/bin/bash

RED="\e[1;31m"
FIN="\e[0m"

###
list () {
content=$(curl --silent -L https://github.com/pyavitz/rpi-img-builder/releases/download/linux/version)
echo $content
}

update () {
sudo rm -f /usr/local/bin/fetch
sudo wget -cq --show-progress https://github.com/pyavitz/scripts/raw/master/fetch -P /usr/local/bin
sudo chmod +x /usr/local/bin/fetch
}

###
rpi-4.19.y () {
mkdir -p ~/.build
cd ~/.build
echo -e "${RED}Fetching rpi-4.19.y${FIN}"
wget -cq --show-progress https://github.com/pyavitz/rpi-img-builder/releases/download/linux/rpi-4.19.y.tar.xz
echo -e "${RED}Done.${FIN}"
echo
echo -e "${RED}Extracting archive${FIN}"
tar xf rpi-4.19.y.tar.xz
rm -f rpi-4.19.y.tar.xz
echo -e "${RED}Done.${FIN}"
echo
echo -e "${RED}Starting install${FIN}"
cd rpi-4.19.y
sudo dpkg -i *.deb
cd ~
echo -e "${RED}Done.${FIN}"
sudo rm -fdr ~/.build/*
}

rpi3-4.19.y () {
mkdir -p ~/.build
cd ~/.build
echo -e "${RED}Fetching rpi3-4.19.y${FIN}"
wget -cq --show-progress https://github.com/pyavitz/rpi-img-builder/releases/download/linux/rpi3-4.19.y.tar.xz
echo -e "${RED}Done.${FIN}"
echo
echo -e "${RED}Extracting archive${FIN}"
tar xf rpi3-4.19.y.tar.xz
rm -f rpi3-4.19.y.tar.xz
echo -e "${RED}Done.${FIN}"
echo
echo -e "${RED}Starting install${FIN}"
cd rpi3-4.19.y
sudo dpkg -i *.deb
cd ~
echo -e "${RED}Done.${FIN}"
sudo rm -fdr ~/.build/*
}

rpi4-4.19.y () {
mkdir -p ~/.build
cd ~/.build
echo -e "${RED}Fetching rpi4-4.19.y${FIN}"
