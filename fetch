cd ~/.build
echo -e "${RED}Fetching rpi3-stable${FIN} ..."
wget -cq --show-progress ${URL}rpi3-stable.tar.xz
echo -e "${RED}Done${FIN}."
echo
echo -e "${RED}Extracting archive${FIN} ..."
