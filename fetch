###
rpi-stable () {
mkdir -p ~/.build
cd ~/.build
echo -e "${RED}Fetching rpi-stable${FIN}"
wget -cq --show-progress https://github.com/pyavitz/rpi-img-builder/releases/download/linux/rpi-stable.tar.xz
