mkdir -p ~/.build
cd ~/.build
echo -e "${RED}Fetching rpi-stable${FIN} ..."
wget -cq --show-progress ${URL}rpi-stable.tar.xz
echo -e "${RED}Done${FIN}."
echo
echo -e "${RED}Extracting archive${FIN} ..."
